{
    "compilerOptions": {
      "lib": [
        "dom.iterable",
        "es2015",
        "es2016.array.include",
        "es2017.object",
        "es2017.string",
        "es2018.promise",
        "esnext",
        "es2017",
        "dom",
      ],
      "baseUrl": ".",
      "sourceMap": true,
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
     "experimentalDecorators": true,
      },
      "include": [
        "../../packages/**/*.ts",
        "../../playground/**/*.ts",
      ],
      "exclude": [
        "node_modules",
        "build",
      ],
    }